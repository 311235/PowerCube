<Window x:Class="canvasImage.MainWindow"
        x:Name="Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:canvasImage"
        mc:Ignorable="d"
        Title="MainWindow" Height="560" Width="640">
    <DockPanel>




        <Button
            x:Name="btnGetFile"
            Content="Get File"
            FontSize="24"
            Background="Navy"
            Foreground="White"
            Click="btnGetFile_Click"
            Width="640"
            Height="40" Canvas.Left="0" Canvas.Top="480"
            />
        <Canvas x:Name="canvas"
            DockPanel.Dock="Bottom"
                Background="White"
                PreviewMouseDown="canvas_PreviewMouseDown"
                PreviewMouseUp="canvas_PreviewMouseUp"
                Canvas.Left="0"
                Canvas.Top="0"
                />
        
    </DockPanel>

</Window>

